{
    "LoggingLambdaPermission": {
        "Type": "AWS::Lambda::Permission",
        "Properties": {
            "FunctionName": {
                "Fn::GetAtt": [
                    "LogHandlerLambdaFunction",
                    "Arn"
                ]
            },
            "Action": "lambda:InvokeFunction",
            "Principal": {
                "Fn::Join": [
                    "",
                    [
                        "logs.",
                        { "Ref" : "AWS::Region"},
                        ".amazonaws.com"
                    ]
                ]
            }
        }
    }
}
